import Important from "../Important";
import Confirmation from "./confirmation.astro";
import Procedure from "./procedure.astro";

interface Props {
  part?: string;
  pageSlug?: string;
  system: string;
}

const { part, pageSlug, system = "ECCSクラウドメール" } = Astro.props;

const importantProps: Parameters<typeof Important>[0] = {
  part,
  pageSlug,
  include: {
    type: "作業",
    heading: "パスワードとメールアドレスを設定する",
  },
  system,
};
---

{
  part === "important" ? (
    <Important {...importantProps}>
      <Procedure part={part} pageSlug={pageSlug} />
    </Important>
  ) : (
    <ul>
      <Important {...importantProps}>
        <Procedure part={part} pageSlug={pageSlug} />
      </Important>
      <Confirmation />
    </ul>
  )
}
